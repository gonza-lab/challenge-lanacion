{
  "name": "frontend",
  "root": "apps/frontend",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["NODE_ENV=production npm run build:client", "NODE_ENV=production npm run build:server"],
        "cwd": "apps/frontend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/server/server.bundle.js",
        "cwd": "apps/frontend"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"webpack --config webpack.client.config.js && webpack --config webpack.server.config.js && npm run start\"",
        "cwd": "apps/frontend"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run lint",
        "cwd": "apps/frontend"
      }
    }
  }
}
